<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokecenter_background"
    tools:context=".activity.initials_pokemons">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:shadowColor="#00E40000"
        android:shadowDx="2"
        android:text="Choose your Pokemon!"
        android:textColor="#F40303"
        android:textColorHighlight="#00E91E63"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/poke_third"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/pokeball"
        app:layout_constraintEnd_toStartOf="@+id/poke_second"
        app:layout_constraintTop_toBottomOf="@+id/poke_first" />

    <ImageView
        android:id="@+id/poke_first"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="324dp"
        android:adjustViewBounds="true"
        android:background="@drawable/pokeball"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/poke_second"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/pokeball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>